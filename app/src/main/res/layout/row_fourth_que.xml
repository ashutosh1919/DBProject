<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/roll_tv"
        android:text="Roll No"
        android:textSize="16sp"
        android:textColor="#00897B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/fname_tv"
        android:layout_below="@+id/roll_tv"
        android:text="First Name"
        android:textSize="16sp"
        android:textColor="#00897B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/minit_tv"
        android:layout_below="@+id/fname_tv"
        android:text="Minit"
        android:textSize="16sp"
        android:textColor="#00897B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lname_tv"
        android:layout_below="@+id/minit_tv"
        android:text="Event_ID"
        android:textSize="16sp"
        android:textColor="#00897B"/>

</RelativeLayout>